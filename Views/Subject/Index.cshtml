@using BLL.DTO;
@model List<SubjectDTO>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Главная</title>
	<link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
	@Html.Partial("~/Views/nav.cshtml")
	<h2>Предметы:</h2>
	<div class="wrap">
		<table>
			<thead>
				<tr>
					<th>Название</th>
				</tr>
			   <tr></tr>
			   <tr></tr>
			</thead>
			<tbody>
				@{
					foreach (SubjectDTO s in Model) {
						<tr>
							<td>@s.Name</td>
							<td>
								<a class="edit" href="/Subject/Edit?id=@s.Id">Изменить</a>
							</td>
							<td>
								<input type="button" value="Удалить" onclick="deleteSubject(@s.Id)" />
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>

	<script>
		function deleteSubject(id){
		console.log("/Subject/Delete?id=" + id);
			fetch("/Subject/Delete?id=" + id, { method: "DELETE" }).then(()=>{
				alert("Удалено")
				window.location.reload();
			});
		}
	</script>
</body>
</html>
